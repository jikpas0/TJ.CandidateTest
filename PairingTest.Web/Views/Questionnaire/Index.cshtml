@model PairingTest.Web.Models.QuestionnaireViewModel

<html>
<head>
    <title>@Model.QuestionnaireTitle</title>
    <!-- Latest compiled and minified CSS -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
    
    <!-- Latest compiled and minified JavaScript -->
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js" integrity="sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa" crossorigin="anonymous"></script>
    <style>
        .remove-bullets {
            list-style-type: none
        }
    </style>
</head>
<body>
    <div class="container">
        <h1>@Model.QuestionnaireTitle</h1>
    </div>
    <br/>
    <div class="container">
        @foreach (var Text in @Model.QuestionsText)
        {
            <div class="form-group row">
                <form>
                    <div class="col-md-3">
                        <label for="@Text" class="col-form-label" style="margin-top: 10px;">@Text</label>
                    </div>
                    <div class="col-md-3">
                        <select class="form-control" id="@Text">
                            <option selected>Please Select</option>
                            <option>Havana</option>
                            <option>Paris</option>
                            <option>Warsaw</option>
                            <option>Berlin</option>
                        </select>
                    </div>
                </form>
            </div>
        }
    </div>
</body>

</html>
